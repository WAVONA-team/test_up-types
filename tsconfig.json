{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2015",

    /* Modules */
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,

    /* Paths */
    "baseUrl": "src",
    "outDir": "dest",
    "declaration": true,
    "declarationDir": "./types"
  },
  "exclude": ["node_modules", "dest"]
}